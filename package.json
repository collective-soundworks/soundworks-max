  "dependencies": {
    "@soundworks/core": "^4.0.0-alpha.14",
    "@soundworks/helpers": "^1.0.0-alpha.7",
    "eslint": "^8.53.0"
  },
  "devDependencies": {
    "@ircam/sc-utils": "^1.3.2",
    "find-process": "^1.4.7",
    "mocha": "^10.2.0",
    "chai": "^4.3.10"
  }
}
